    <children>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="10">
            <children>
                <Label prefHeight="33.0" prefWidth="28.0" style="-fx-font-size: 24;" text="ðŸ‘¥" textFill="#b977ff">
