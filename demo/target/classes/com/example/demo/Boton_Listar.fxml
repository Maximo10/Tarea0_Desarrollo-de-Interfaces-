                <TableColumn fx:id="colName" prefWidth="215.0" text="Nombre" />
                <TableColumn fx:id="colDepartment" prefWidth="224.0" text="Departamento" />
                <TableColumn fx:id="colActions" prefWidth="220.0" text="Acciones" />
